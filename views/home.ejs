<%-include("partials/header")-%>

<div id="content" class="container">
  <h1>Connecting ideas and people.</h1>
  <p>Blogware provides you a medium to reach the other side of the world with just one post.</p>
  <% newPosts.forEach(function(post){ %>
  <h3><%= post.title %></h3>
  <% if(post.body.length>100)%>
  <% let body=post.body.substr(0,100) +"..."; %>
  <p><%= body %> <a href="/posts/<%= post._id %>">Read More</a></p>
  <% }) %>
  <a href="/compose" class="btn btn-info btn-md" role="button" aria-pressed="true">Compose</a>
</div>


<%-include("partials/footer")-%>
